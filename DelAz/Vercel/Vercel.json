{
  "functions": {
    "api/upload.js": { "maxDuration": 10 }
  },
  "rewrites": [
    { "source": "/file/(.*)", "destination": "/file/$1" },
    { "source": "/(.*)", "destination": "/public/$1" }
  ],
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        { "key": "Access-Control-Allow-Origin", "value": "*" },
        { "key": "Access-Control-Allow-Headers", "value": "x-file-name" }
      ]
    }
  ]
}